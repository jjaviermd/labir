<% if @patient %>
  <table class = "table">
    <thead>
      <tr>
        <th>Patient name</th>
        <th>Patient DNI</th>
        <th>Total cases</th>
        <th>Pending cases</th>
        <th>Diagnosed cases</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <%= button_to @patient.full_name, new_case_path, method: :get, params: {patient_id: @patient.id}, class: 'button is-text' %>
        </td>
        <td><%= @patient.dni %></td>
        <td><%= @patient.cases.count %></td>
        <td><%= @patient.cases.not_diagnosed.count %></td>
        <td><%= @patient.cases.diagnosed.count %></td>
      </tr>
    </tbody>
  </table>
<% else %>
  <div class="notification">
    <p class ="title" >Patient not found!</p>
    <%= link_to 'Create new patient and case', new_patient_path %>
  </div>
<% end %>
