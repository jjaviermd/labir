<div class="container is-fluid mt-4">
  <%= render 'patients/patient', patient: @patient %>
  <h2 class="subtitle mt-4" >Update case</h2>
  <div class="mt-4">
    <%= turbo_frame_tag @case do %>
      <%= form_with model: @case do |c_f| %>
        <%= render 'case_subform', c_f: c_f %>
        <br>
        <div class="field is-grouped">
          <%= c_f.submit 'Acept and save', class: 'control button is-success' %>
          <%= link_to 'Cancel', request.referer.present? ? request.referer : root_path, class:'control button', data:{turbo_frame: "_top"} %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
