<h1>Templates#index</h1>
<p>Find me in app/views/templates/index.html.erb</p>
<% @templates.each do |template| %>
  <div>
    <h1><%= template.name %></h1>
    <h2><%= template.prefix %></h2>
    <p><%= template.text %></p>
    <%= link_to "Edit", edit_template_path(template)  %>
    <%= link_to "Delete", template_path(template), data: {
    turbo_method: :delete,
    turbo_confirm: "Are you sure?"
    } %>
  </div>
<% end %>
<%= form_with url: new_template_url, method: :get  do |f| %>
  <div class= "field">
    <%= f.label :template_type, 'Template type' %>
    <div class="control">
      <div class="select">
        <%= f.select :template_type,[["macro", "macro_template"], ["micro", "micro_template"], ["diagnosis", "diagnosis_template"]] %>
      </div>
    </div>
  </div>
  <div class='field is-grouped' >
    <%= f.submit "New Template", class: 'control button is-success', data:{turbo_frame: "_top"} %>
    <%# link_to 'Cancel', request.referer.present? ? request.referer : root_path, class: 'control button' %>
  </div>
<% end %>
