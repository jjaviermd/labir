    <%= t_f.label :text %>
    <%= t_f.text_area :text, class:'textarea' %>
  </div>
  <div class='field is-grouped' >
    <%= t_f.submit 'Acept and save', class: 'control button is-success', data:{turbo_frame: "_top"} %>
