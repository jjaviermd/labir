<%= form_with model: pathologist do |pa_f| %>
  <div class="field">
    <%= pa_f.label :email %><br />
    <%= pa_f.email_field :email, class: 'input', autofocus: true, autocomplete: "email" %>
  </div>
  <!--
  <div class="field">
    <%= pa_f.label :password %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= pa_f.password_field :password, class: 'input', autocomplete: "new-password" %>
  </div>
  -->
  <div class = "field">
    <%= pa_f.label :activity, 'Activity' %>
    <div class="control">
      <%= pa_f.radio_button :activity, 'active' %>
      <%= pa_f.label :activity_active, 'Active' %>
      <%= pa_f.radio_button :activity, 'inactive' %>
      <%= pa_f.label :activity_inactive, 'Inactive' %>
    </div>
  </div>
  <div class= 'field'>
    <%= pa_f.label :last_name, 'Last name' %>
    <%= pa_f.text_field :last_name, class: 'input' %>
  </div>
  <div class= 'field'>
    <%= pa_f.label :name %>
    <%= pa_f.text_field :name, class: 'input' %>
  </div>
  <div class= 'field'>
    <%= pa_f.label :registry_number %>
    <%= pa_f.text_field :registry_number, class:'input' %>
  </div>
  <div class="field file is-boxed is-normal">
    <label class="file-label">
      <%= pa_f.file_field :sign, class: 'file-input' %>
      <span class="file-cta">
        <span class="file-icon">
          <i class="material-symbols-outlined">upload_file</i>
        </span>
        <span class="file-label">
          JPG/PNG file
        </span>
      </span>
    </label>
  </div>
  <div class='field is-grouped' >
    <%= pa_f.submit 'Acept and save', class: 'control button is-success', data:{turbo_frame: "_top"} %>
    <%= link_to 'Cancel', request.referer.present? ? request.referer : root_path, class: 'control button' %>
  </div>
<% end %>
