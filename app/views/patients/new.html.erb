<%= form_with model: @patient do |p_f| %>
  <%= render 'layouts/form_messages', object: @patient %>
  <%= render 'patient_form', p_f: p_f %>
  <%= p_f.fields_for :cases do |c_f| %>
    <% render 'cases/case_subform', c_f: c_f %>
  <% end %>
  <div>
    <%= p_f.submit 'Acept and save', class: 'button is-success' %>
    <%= link_to 'Cancel', request.referer.present? ? request.referer : root_path, class:'button is-warning' %>
    <%# link should redirect somwere else %>
  </div>
<% end %>
